<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="5dp"
    tools:context=".ui.listeLines.ListLinesAccueil">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:background="@color/colorBackgroundLight"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/logo_line"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/logo_ligne"
            android:src="@drawable/ic_format_list_bulleted_black_24dp"
            app:fabSize="auto" />

        <TextView
            android:id="@+id/name_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textSize="18sp"
            tools:text="Metro 1" />

        <ImageView
            android:id="@+id/status_traffic_main"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:contentDescription="@string/etat_traffic_couleur"
            android:src="@drawable/ic_circle_green_24dp"
            android:tint="@color/trafficOk" />

        <ImageView
            android:id="@+id/fab_favLine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/ajout_favoris"
            android:src="@drawable/ic_star_border_black_24dp"
            android:tint="@color/trafficOk"
            app:backgroundTint="@color/favorisStar"
            app:fabSize="auto" />

    </LinearLayout>
</androidx.cardview.widget.CardView>