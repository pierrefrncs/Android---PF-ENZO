<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCardStation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    tools:context=".ui.listeLines.details.StationsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_ligneStation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/logo_ligne"
            android:src="@drawable/ic_format_list_bulleted_black_24dp"
            android:visibility="gone"
            app:fabSize="auto" />

        <TextView
            android:id="@+id/name_stations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textSize="18sp"
            tools:text="La Defense" />

        <ImageView
            android:id="@+id/fab_favStation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/ajout_favoris"
            android:src="@drawable/ic_star_border_black_24dp"
            android:tint="@color/colorAccent"
            app:backgroundTint="@color/colorAccent"
            app:fabSize="auto" />


    </LinearLayout>
</androidx.cardview.widget.CardView>