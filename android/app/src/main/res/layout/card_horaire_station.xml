<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCardHoraire"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="5dp"
    tools:context="app.epf.ratp_eb_pf.ui.detailStation.StationDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:orientation="horizontal"
        android:elevation="3dp"
        android:background="@color/colorBackgroundLight">

        <TextView
            android:id="@+id/horaire_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hyphenationFrequency="normal"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:textSize="18sp"
            tools:text="La Defense (Grand Arche)" />

        <TextView
            android:id="@+id/horaire_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:gravity="end|center_vertical"
            android:textSize="18sp"
            tools:text="Train Ã  l'approche" />

    </LinearLayout>
</androidx.cardview.widget.CardView>